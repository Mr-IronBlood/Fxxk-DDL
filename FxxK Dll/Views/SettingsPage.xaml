<UserControl x:Class="FxxkDDL.Views.SettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="700">

    <Grid Background="#F8F9FA">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <!-- 标题 -->
                <TextBlock Text="⚙️ 应用设置" 
                          FontSize="20" 
                          FontWeight="Bold"
                          Foreground="#2C3E50"
                          Margin="0,0,0,20"/>

                <!-- API配置区域 -->
                <Border Background="White" 
                        CornerRadius="6"
                        BorderBrush="#D5DBDB" 
                        BorderThickness="1"
                        Padding="20"
                        Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="DeepSeek API 配置" 
                                  FontSize="16" 
                                  FontWeight="SemiBold"
                                  Foreground="#2C3E50"
                                  Margin="0,0,0,15"/>

                        <TextBlock Text="API密钥 (从 platform.deepseek.com 获取)" 
                                  FontSize="13"
                                  Foreground="#7F8C8D"
                                  Margin="0,0,0,5"/>

                        <TextBox x:Name="TxtApiKey" 
                                FontSize="14"
                                Padding="10"
                                Height="40"
                                Margin="0,0,0,15"/>

                        <StackPanel Orientation="Horizontal">
                            <Button x:Name="BtnSaveApiKey" 
                                    Content="保存密钥"
                                    Padding="12,8"
                                    Background="#3498DB"
                                    Foreground="White"
                                    FontWeight="SemiBold"
                                    FontSize="13"
                                    Cursor="Hand"
                                    Margin="0,0,10,0"/>

                            <Button x:Name="BtnTestApiKey" 
                                    Content="测试连接"
                                    Padding="12,8"
                                    Background="#2ECC71"
                                    Foreground="White"
                                    FontWeight="SemiBold"
                                    FontSize="13"
                                    Cursor="Hand"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                <Border x:Name="StatusBorder" 
        Background="#F8F9FA"
        Padding="15"
        Margin="0,15,0,0"
        CornerRadius="6"
        BorderBrush="#D5DBDB"
        BorderThickness="1">
                    <StackPanel>
                        <TextBlock x:Name="TxtStatus" 
                  FontSize="13"
                  TextWrapping="Wrap"
                  Text="未配置API密钥"/>
                    </StackPanel>
                </Border>
                <!-- 使用说明 -->
                <Border Background="White" 
                        CornerRadius="6"
                        BorderBrush="#D5DBDB" 
                        BorderThickness="1"
                        Padding="20">
                    <StackPanel>
                        <TextBlock Text="使用说明" 
                                  FontSize="16" 
                                  FontWeight="SemiBold"
                                  Foreground="#2C3E50"
                                  Margin="0,0,0,15"/>

                        <TextBlock Text="如何获取DeepSeek API密钥：" 
                                  FontSize="13"
                                  FontWeight="SemiBold"
                                  Foreground="#2C3E50"
                                  Margin="0,0,0,5"/>

                        <TextBlock Text="1. 访问 https://platform.deepseek.com/
2. 注册/登录账号
3. 进入'API Keys'页面
4. 点击'Create a new API key'
5. 复制生成的密钥（sk-开头）
6. 粘贴到上面的输入框中
7. 点击'测试连接'验证
8. 点击'保存密钥'完成配置"
                                  FontSize="13"
                                  Foreground="#7F8C8D"
                                  TextWrapping="Wrap"
                                  LineHeight="22"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
